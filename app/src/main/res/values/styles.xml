<resources>

    <style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo"></style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#fffb7299</item>
        <item name="colorPrimaryDark">#ffb85671</item>
        <item name="colorAccent">#FF4081</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
    </style>

    <style name="AppTheme.NavigationView" parent="@style/Theme.DesignDemo">
        <item name="android:background">@android:color/transparent</item>
        <item name="selectableItemBackground">@drawable/selector_navigation_menu_item_bg</item>
        <item name="textAppearanceListItem">@style/TextAppearance.App.Title</item>
        <item name="colorControlHighlight">#44bbbbbb</item>
    </style>
    <style name="TextAppearance.App.Title" parent="@style/TextAppearance.App.Large">
        <item name="android:textColor">?android:textColorPrimary</item>

    </style>
    <style name="TextAppearance.App.Large" parent="@style/TextAppearance.App">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>







    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="Theme.ToolBar.ZhiHu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow.ZhiHu</item>
    </style>

    <style name="ActionButton.Overflow.ZhiHu" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_menu_more_overflow</item>
    </style>


    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="myToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:paddingRight">10dp</item>

    </style>


    <style name="Widget.App.Toolbar.Home" parent="@style/Widget.App.Toolbar" />

    <style name="Widget.App.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:minHeight">?navigationTopBarSize</item>
        <item name="contentInsetStart">0.0dip</item>
        <item name="popupTheme">@style/AppTheme.PopMenu</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.Topbar.Title</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.App.Topbar.Subtitle</item>
        <item name="titleMargins">4.0dip</item>
        <item name="maxButtonHeight">?navigationTopBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
    <!--<style name="ThemeOverlay.AppCompat.Dark.ActionBar" parent="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar" />-->

    <!--bilibili toolbar style-->
    <style name="AppTheme.PopMenu" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:listSelector">@drawable/item_background</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/item_background</item>
        <item name="colorControlNormal">@color/gray_dark</item>
        <item name="colorControlActivated">@color/theme_color_primary</item>
        <item name="colorControlHighlight">@color/gray_trans</item>
    </style>

    <style name="TextAppearance.App.Topbar.Title" parent="@style/TextAppearance.App.XLarge">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.App.XLarge" parent="@style/TextAppearance.App">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.App.Topbar.Subtitle" parent="@style/TextAppearance.App.Subtitle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.App.Subtitle" parent="@style/TextAppearance.App.Medium" />

    <style name="TextAppearance.App.Medium" parent="@style/TextAppearance.App">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextAppearance.App" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <!--bilibili toolbar style-->
</resources>
