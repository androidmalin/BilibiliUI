<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="128.6dip"
        android:src="@drawable/banner_sample" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="154.86dip"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="77.44dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_category_phone_live"
                style="@style/first_category_text_style"
                android:drawableTop="@drawable/ic_category_phone_live"
                android:text="手机直播" />

            <TextView
                android:id="@+id/tv_category_paint"
                style="@style/first_category_text_style"
                android:drawableTop="@drawable/ic_category_paint"
                android:text="绘画专区" />

            <TextView
                android:id="@+id/tv_category_meng_recommand"
                style="@style/first_category_text_style"
                android:drawableTop="@drawable/ic_category_meng_recommand"
                android:text="宅萌推荐" />

            <TextView
                android:id="@+id/tv_category_net_game"
                style="@style/first_category_text_style"
                android:drawableTop="@drawable/ic_category_net_game"
                android:text="网络游戏" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="77.44dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_category_single_game"
                style="@style/first_category_text_style"
                android:drawableTop="@drawable/ic_category_single_game"
                android:text="单机游戏" />

            <TextView
                android:id="@+id/tv_category_e_game"
                style="@style/first_category_text_style"
                android:drawableTop="@drawable/ic_category_e_game"
                android:text="点击竞技" />

            <TextView
                android:id="@+id/tv_category_all"
                style="@style/first_category_text_style"
                android:drawableTop="@drawable/ic_category_live_all_area"
                android:text="全部分类" />

            <TextView
                android:id="@+id/tv_category_all_live"
                style="@style/first_category_text_style"
                android:drawableTop="@drawable/ic_category_live_all"
                android:text="全部直播" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43.44dip"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">


        <RelativeLayout
            android:id="@+id/rl_live_add_attention"
            style="@style/first_live_re_layout"
            android:background="@drawable/live_left_button_selector">

            <TextView
                style="@style/first_live_text_style"
                android:drawableLeft="@drawable/live_home_attention_anchor"
                android:text="关注直播" />
        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:clickable="false"
            android:focusable="false" />

        <RelativeLayout
            android:id="@+id/rl_live_center"
            style="@style/first_live_re_layout"
            android:background="@drawable/live_middle_button_selector">

            <TextView
                style="@style/first_live_text_style"
                android:drawableLeft="@drawable/live_home_center"
                android:text="直播中心" />
        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:clickable="false"
            android:focusable="false" />

        <RelativeLayout
            android:id="@+id/rl_live_search"
            style="@style/first_live_re_layout"
            android:background="@drawable/live_right_button_selector">

            <TextView
                style="@style/first_live_text_style"
                android:drawableLeft="@drawable/live_home_search"
                android:text="搜索直播" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>

